extends layouts/layout
block content
  body
    div(class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow")
      img(src="/imgs/Shonen_logo.png" width="30" height="30" class="d-inline-block align-top espacio-derecha" alt="")
      h5(class="my-0 mr-md-auto font-weight-normal") SHONEN.Inc
      nav(class="my-2 my-md-0 mr-md-3")
    
      if !user
        a(class="p-2 text-dark espacio-derecha" href="/users/register") Registrarse
        a(class="btn btn-outline-primary" href="/users/login") Iniciar Sesión
      else
        a(class="btn btn-outline-primary" href="/users/logout") Cerrar Sesión
  
    div(class="container espacio-arriba")
      div(class="row mx-auto")
        div(class="col-md-10 order-md-1")
          h4(class="mb-3") Información de usuario
          
          form(class="needs-validation mx-auto" method="post" action="/users/register" novalidate)
          
          if errors
            each error in errors
              div(class="alert alert-danger")=error.msg
          
          div(class="mb-3")
            label(for="name") Nombre
            input(type="text" class="form-control" id="email" placeholder="Nombre" name="name")
          
          
          div(class="mb-3")
            label(for="username") Username
            div(class="input-group")
              input(type="text" class="form-control" id="username" placeholder="Username" name="username" required)
              
            
          div(class="mb-3")
            label(for="email") Correo electrónico
            input(type="email" class="form-control" id="email" placeholder="you@example.com" name="email")
            
          

          div(class="mb-3")
            label(for="inputPassword") Contraseña
            input(type="password" id="inputPassword" class="form-control" placeholder="Contraseña" name="password" required)
          
          
          div(class="mb-3")
            label(for="inputPassword") Confirmar Contraseña
            input(type="password" id="inputPassword2" class="form-control" placeholder="Contraseña" name="password2" required)
          
      
          hr(class="mb-4")
          button(class="btn btn-primary btn-lg btn-block" type="submit") Registrarse
 
        
      
    
